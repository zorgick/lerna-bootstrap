{
  "name": "root",
  "version": "1.0.0",
  "main": "index.ts",
  "license": "MIT",
  "author": {
    "name": "Zakhar Kononov",
    "email": "zorgizorgik@gmail.com",
    "social": {
      "app": "telegram",
      "nickName": "@zorgick"
    }
  },
  "workspaces": [
    "modules/*",
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "setup": "yarn install && yarn lerna bootstrap",
    "story": "lerna run storybook --stream",
    "lint": "lerna run lint --parallel",
    "types:check": "tsc --noEmit",
    "start": "lerna run start --stream",
    "start:web": "lerna run start --scope=@packages/web",
    "build": "lerna run build --stream",
    "build:modules": "lerna run build --scope=@modules/*",
    "observe": "tsc -b tsconfig.packages.json --watch",
    "prepare": "husky install && lerna run prepare --stream"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@storybook/cli": "^6.2.8",
    "commitizen": "^4.2.3",
    "create-react-app": "^4.0.3",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
